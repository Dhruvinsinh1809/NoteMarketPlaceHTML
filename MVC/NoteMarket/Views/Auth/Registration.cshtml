@model NoteMarket.Models.MembersData
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="create account">

    <!-- Background img -->
    <img id="bg-img" src="~/images/pre-login/banner-with-overlay.jpg" alt="back image">
    <div id="login-overlay"></div>
    <!-- top img -->
    <img id="img1" src="~/images/pre-login/top-logo.png" alt="top img">
    <!-- form -->
    <div id="form4">
        <form action="/Auth/Registration" method="post">
            <div id="forminer4">
                <h1>Create An Acoount</h1>
                <p class="pa">Enter your details to signup</p>
                <div class="form-group1">
                    @Html.LabelFor(m => m.FirstName)
                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your First Name" } })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "error" })
                </div>
                <div class="form-group5">
                    @Html.LabelFor(m => m.LastName)
                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Last Name" } })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "error" })
                </div>
                <div class="form-group6">
                    @Html.LabelFor(m => m.EmailId)
                    @Html.EditorFor(m => m.EmailId, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your email" } })
                    @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "error" })
                </div>
                <div class="form-group5">
                    @Html.LabelFor(m => m.Password)
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @id = "password-field", @class = "form-control", placeholder = "Enter your password" } })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group6">
                    @Html.LabelFor(m => m.CPassword)
                    @Html.EditorFor(m => m.CPassword, new { htmlAttributes = new { @id = "password-field1", @class = "form-control", placeholder = "Enter confirm password" } })
                    @Html.ValidationMessageFor(m => m.CPassword, "", new { @class = "error" })
                    <span toggle="#password-field1" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <button type="submit"><b href="/Auth/Login">SIGN UP</b></button>
                <p class="btm">Already have an account? <a href="/Auth/Login">Log In</a></p>
            </div>
        </form>
    </div>
    @if (TempData["Success"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
    }

</section>

